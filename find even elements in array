public class array {

	public static void main(String[] args) {
		int odd=0;
		int even=0;
		
		int[] arr = {1,2,3,4,5,6,7,8,9,17,18};
		
		
		

		for(int i=1;i<arr.length;i++) {
			if(arr[i]%2==0) {
				odd=arr[i];
				
				
			}
			else if(arr[i]%2!=0) {
				even=arr[i];
				System.out.println("even elements" + " - "+ even);
				
				
			}
			
			
			
			
			
		}
		
		
		
		
		
	}
}
