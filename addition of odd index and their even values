       void	array(){
            int i=1;
	    int ar[]={4,8,7,9,6,4};
	   int br[]=new int[ar.length];
	    
	    for( i=1;i<ar.length;i+=2){
	       
	        if(ar[i]%2==0){
	            br[i]=ar[i];
	             System.out.println("The even numbers are" + " "+ br[i]);
	        }
	        
	    }
	   
	   
	    
	        }
	
